@model BusinessLogicLayer.ViewModel.UserUpdateModel

@{
    ViewBag.Title = "CreateUser";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
       <legend>@Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Create</legend>
		<div>
			@Html.LabelFor(q => q.User.Login)
			@Html.EditorFor(q => q.User.Login)
			@Html.ValidationMessageFor(q => q.User.Login)
		</div>
		<div>
			@Html.LabelFor(q => q.User.Email)
			@Html.EditorFor(q => q.User.Email)
			@Html.ValidationMessageFor(q => q.User.Email)
		</div>
		<div>
			@Html.LabelFor(q => q.User.Password)
			@Html.EditorFor(q => q.User.Password)
			@Html.ValidationMessageFor(q => q.User.Password)
		</div>

		@if(Model.Roles != null)
  {
		<div>
			Roles
			@Html.DropDownListFor(q => q.SelectedRoles, new SelectList(Model.Roles, "Id", "NameRole"), new { multiple= true})
		</div>
  }
        <p>
            <input type="submit" value="@Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.BackToList, "AuthUsers", "Admin", null, null)
</div>
