<div class="well">
    @model Model.Entities.Comment
    <script src="//cdn.ckeditor.com/4.4.5/full/ckeditor.js"></script>
    @using (Html.BeginForm("newcomment", "Comment", FormMethod.Post, new { @class="form"}))
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend></legend>
      
                 <div class="form-group">
                    @Html.LabelFor(model => model.Body)
                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control  editor  editor-field  editorSmall", id = "editorSmall" })
                    @Html.ValidationMessageFor(model => model.Body)<br/>
                </div>
          

              <div class="form-group">
                    @Html.LabelFor(model => model.AuthorName)
                    @Html.EditorFor(model => model.AuthorName, new { @class = "form-control" })
                  <label></label>
                    @Html.ValidationMessageFor(model => model.AuthorName)
                </div>
     
            <p>
                <input type="submit" class="btn btn-primary" value="@Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Create" />
            </p>
        </fieldset>
    }

</div>
 @System.Web.Optimization.Scripts.Render("~/WYSIWYGeditor")