@model IEnumerable<Model.Entities.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>@Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Genre</h2>

<p>
    @Html.ActionLink(Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Create, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (item.NorthWindId == 0)
            {
                @Html.ActionLink(Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Edit, "Edit", new {id = item.Id, northWindId = item.NorthWindId}) @:|
                @Html.ActionLink(Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Delete, "Delete", new {id = item.Id, northWindId = item.NorthWindId})@:|
            }
                @Html.ActionLink(Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Detail, "Details", new {id = item.Id, northWindId = item.NorthWindId})
               
        </td>
    </tr>
}

</table>
