@model BusinessLogicLayer.ViewModel.GameViewModel
@{
    ViewBag.Title = "New";
}
<script src="//cdn.ckeditor.com/4.4.5/full/ckeditor.js"></script>
  
<div class="col-lg-9 col-lg-offset-3">
    <div class="well bs-component">
        <h2>@Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Create</h2>

        @using (Html.BeginForm("New", "Game", FormMethod.Post, new { @class = "form-horizontal", id = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="editor-label">
                @Html.LabelFor(m => m.Game.Name)
            </div>
            <div>
                @Html.EditorFor(m => m.Game.Name, new { @class = "editor-field" })
                @Html.ValidationMessageFor(m => m.Game.Name)
            </div>
              
       
         
            <div class="editor-label">
                @Html.LabelFor(m => m.Game.Price)
            </div>
            <div>
                @Html.EditorFor(m => m.Game.Price, new { @class = "editor-field" })
                @Html.ValidationMessageFor(m => m.Game.Price)
            </div>
            
            
            <div class="editor-label">
                @Html.LabelFor(m => m.Game.Key)
            </div>
            <div>
                @Html.EditorFor(m => m.Game.Key, new { @class = "editor-field" })
                @Html.ValidationMessageFor(m => m.Game.Key)
            </div>
    
           
            <div class="editor-label">
                @Html.LabelFor(m => m.Game.UnitsInStock)
            </div>
            <div>
                @Html.EditorFor(m => m.Game.UnitsInStock, new { @class = "editor-field" })
                @Html.ValidationMessageFor(m => m.Game.Name)
            </div>
            
            
            <div class="editor-label">
                @Html.DisplayNameFor(m => m.Game.Description)
            </div>
            <div>
                @Html.TextAreaFor(m => m.Game.Description, new { @class = "form-control  editor  editor-field  editorSmall", id = "editorSmall" })
                @Html.ValidationMessageFor(m => m.Game.Description)
            </div> 
            <div>
                @Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Genres
            </div>
            @Html.ListBox( "allGenres",Model.MultiListGenres, new { multiple = true, @class = "genre" })
              
            <div id="ctrl">
                <button  data-dir="allToRight" type="button">&gt;&gt;</button>
                <button  data-dir="selToRight" type="button">&gt;</button>
                <button  data-dir="selToLeft" type="button">&lt;</button>
                <button data-dir="allToLeft" type="button">&lt;&lt;</button>
            </div>
            <select multiple class="genre" id="leftselect" name="GenreList"></select>
              @Html.ValidationMessageFor(m => m.GenreList)
            <div>
                @Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Platforms

                @Html.ListBoxFor(m => m.PlatformList, Model.MultiListTypes, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PlatformList)

            </div>

            <div>
                @Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Publishers

                @Html.ListBoxFor(m => m.PublisherList, Model.MultiListPublisher, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PublisherList)

            </div>
            <div>
                Languages:
        @Html.DropDownListFor(m => m.LanguageCode, new SelectList(Model.Languages, "Code", "Code"), new { @class = "form-control" })
                @Html.TextAreaFor(m => m.AdditionalLangauge, new { @class = "editor editorSmall", id = "editorSmall2" })<br />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" id="subbutton" type="submit" name="Save" value="@Yevhenii_KoliesnikTask1.App_LocalResources.GlobalRes.Save" />
            </div>
 
        }
    </div>
</div>
@System.Web.Optimization.Scripts.Render("~/WYSIWYGeditor")
@System.Web.Optimization.Scripts.Render("~/GenreJS")